datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Adjust the path as needed
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id                       Int          @id @default(autoincrement())
  mainPartNo               String
  description              String
  areaInSft                Float
  dailyRecordId            Int?
  monthlyRecordId          Int?
  yearlyRecordId           Int?
  dailyRecord              DailyRecord? @relation("DailyProduct", fields: [dailyRecordId], references: [id])
  monthlyRecord            MonthlyRecord? @relation("MonthlyProduct", fields: [monthlyRecordId], references: [id])
  yearlyRecord             YearlyRecord? @relation("YearlyProduct", fields: [yearlyRecordId], references: [id])
}

model DailyRecord {
  id                       Int       @id @default(autoincrement())
  TotalSurfaceAreaProduced Int       @default(0)
  Day                      Int
  Month                    Int
  Year                     Int
  Hour                     Int
  products                 Product[]   @relation("DailyProduct")
  
}

model MonthlyRecord {
  id                       Int          @id @default(autoincrement())
  TotalSurfaceAreaProduced Int          @default(0)
  Day                      Int
  Month                    Int
  Year                     Int
  products                 Product[]   @relation("MonthlyProduct")
  
}

model YearlyRecord {
  id                       Int          @id @default(autoincrement())
  TotalSurfaceAreaProduced Int          @default(0)
  Year                     Int
  Month                    Int
  products                 Product[]    @relation("YearlyProduct")
  
}
